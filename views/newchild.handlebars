<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title">Child Form</h5>
          <form id="addChild" method="post" action="/newchild">
            <div hidden hclass="form-row form-inline mb-2 mr-sm-2">
							<label for="pid" class="mb-1 mr-sm-2">Your Parent Id</label>
              <input
                class="form-control"
								id="pid"
                type="text"
                name="ParentId"
                placeholder="Your parent id is: {{pid}}"
                value="{{ParentID}}"
                readonly
              />
            </div>
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="name-first">First Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="child-name-first"
                  name="name_first"
                  placeholder="First"
                />
              </div>
              <div class="form-group col-md-6">
                <label for="name-first">Last Name</label>
                <input
                  type="text"
                  class="form-control"
                  id="child-name-last"
                  name="name_last"
                  placeholder="Last"
                />
              </div>
            </div>
            <div class="form-group">
                <label for="address">Age</label>
                <input type="number"
                       min="0" step="1"
                       class="form-control"
                       id="age"
                       name="age"
                       placeholder="age" />
                <label for="gender">Gender</label>
                <input type="text"
                       class="form-control"
                       id="gender"
                       name="gender"
                       placeholder="gender" />
                <label for="diet">Allergies</label>
                <input type="text"
                       class="form-control"
                       id="allergies"
                       name="allergies"
                       placeholder="none" />
                <label for="diet">Diet Restrictions</label>
                <input type="text"
                       class="form-control"
                       id="dietRestrictions"
                       name="dietRestrictions"
                       placeholder="none" />
                <label for="diet">Notes</label>
                <input type="text"
                       class="form-control"
                       id="notes"
                       name="notes"
                       placeholder="notes" />
                <label for="diet">monday</label>
                <input type="checkbox"
                       class="form-control"
                       name="monday"
                       value="1" />
                <label for="diet">Tuesday</label>
                <input type="checkbox"
                       class="form-control"
                       name="tuesday"
                       value="1"/>
                <label for="diet">Wednesday</label>
                <input type="checkbox"
                       class="form-control"
                       name="wednesday"
                       value="1" />
                <label for="diet">Thursday</label>
                <input type="checkbox"
                       class="form-control"
                       name="thursday"
                       value="1"/>
                <label for="diet">Friday</label>
                <input type="checkbox"
                       class="form-control"
                       name="friday"
                       value="1"/>
                
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script
  type="text/javascript"
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"
></script>

